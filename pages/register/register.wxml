<!--pages/register/register.wxml-->
<lc-header></lc-header>
<form bindsubmit="register">
  <view class="root">
    <view class="item">
      <text>手机：</text>
      <input placeholder="请输入您的手机号" type="number" name='phone'/>
    </view>
    <view class="item">
      <text>密码：</text>
      <input placeholder="请输入您的密码" type="safe-password" name='psw'/>
    </view>
    <view class="item">
      <text>姓名：</text>
      <input  placeholder="请输入您的姓名" type="text" name='name'/>
    </view>
    <button class="btn" form-type="submit">注册</button>
  </view>
</form>
