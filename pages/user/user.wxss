page {
  background: #92c47d;
}

.top {
  display: flex;
  align-items: center;
  margin: 40rpx;
}

.top .top-img {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin-right: 30rpx;
}

.top .topName {
  font-size: 50rpx;
  color: white;
}

.top .loginOut {
  font-size: 35rpx;
  margin-top: 20rpx;
}

.item {
  display: flex;
  align-items: center;
  height: 90rpx;
  background: white;
  border-bottom: 2rpx solid gainsboro;
}

.item button {
  width: 100%;
  background: white;
  border: none;
  text-align: left;
  padding: 0;
  margin: 0;
  line-height: 1.3;
  font-size: 38rpx;
  font-weight: normal;
}

.item button::after {
  border: none;
  border-radius: 0;
}

.item .itemName {
  font-size: 38rpx;
  margin-left: 30rpx;
}

.item .right_arrow {
  border: solid black;
  border-width: 0 6rpx 6rpx 0;
  padding: 6rpx;
  position: absolute;
  right: 15px;
  transform: rotate(-45deg);
  -webkit-transform: rotate(-45deg);
}
